    <script>
        document.addEventListener('DOMContentLoaded', function() {

            const experienceData = [
                {
                    role: "Systems Engineer - Wheel & Tyre",
                    company: "Jaguar Land Rover, UK",
                    period: "2023 - Present",
                    details: [
                        "Championed Agile practices, enhancing program delivery efficiency and ensuring strict adherence to Gateway milestones.",
                        "Orchestrated Systems Engineering Gateways, aligning critical product engineering deliverables across diverse functions.",
                        "Represented team in key project reviews, strategically defining test parameters and success criteria to meet overarching program objectives."
                    ]
                },
                {
                    role: "Deputy Manager - Product Design & Development",
                    company: "JK Tyres, India",
                    period: "2016 - 2023",
                    details: [
                        "Successfully managed and delivered multiple end-to-end product development programs for leading OEM clients (e.g., Tata Motors, Suzuki).",
                        "Administered comprehensive budgeting, strategic planning, and risk management processes, ensuring alignment with customer specifications.",
                        "Directed product testing, validation, and homologation procedures, achieving compliance with global and regional regulatory standards.",
                        "Spearheaded creative design and development initiatives for new Rally, Passenger, and Commercial Vehicle products.",
                        "Consistently delivered projects within defined timeframes, budgets, and scope, while leading talent development and performance management."
                    ]
                }
            ];
            
            const skillsData = {
                "Project Mgt.": ["PMP", "Agile Methodologies", "Planning & Coordination", "Stakeholder Management", "Risk Mitigation", "Budget Control", "Schedule Management"],
                "Engineering": ["FEA Analysis", "2D/3D Modelling (AutoCAD, Siemens NX)", "Inventor, SolidWorks", "Technical Documentation", "Manufacturing Processes"],
                "Leadership": ["Cross-Functional Leadership", "Team Leadership", "Business Case Development", "Strategic Thinking", "Client Relationship Management"],
                "Quality & Process": ["Process Optimization", "Change Management", "Industry Standards", "Validation & Homologation", "DFMEA"]
            };

            const timelineContainer = document.getElementById('timeline-container');
            experienceData.forEach((job, index) => {
                const item = document.createElement('div');
                item.className = 'timeline-item relative pl-10 pb-10';
                item.innerHTML = `
                    <div class="absolute left-0 top-1 w-5 h-5 bg-white border-2 border-indigo-600 rounded-full"></div>
                    <div class="cursor-pointer" data-index="${index}">
                        <p class="text-sm text-stone-500 mb-1">${job.period}</p>
                        <h3 class="text-lg font-bold">${job.role}</h3>
                        <p class="text-stone-600 font-medium">${job.company}</p>
                    </div>
                    <div id="details-${index}" class="mt-4 pl-2 border-l-2 border-stone-200 overflow-hidden transition-all duration-500 max-h-0">
                        <ul class="list-disc list-inside space-y-2 text-stone-700">
                           ${job.details.map(d => `<li>${d}</li>`).join('')}
                        </ul>
                    </div>
                `;
                timelineContainer.appendChild(item);
            });

            timelineContainer.addEventListener('click', function(e) {
                const header = e.target.closest('[data-index]');
                if (header) {
                    const index = header.dataset.index;
                    const detailsPanel = document.getElementById(`details-${index}`);
                    const allPanels = timelineContainer.querySelectorAll('[id^="details-"]');
                    
                    allPanels.forEach(panel => {
                        if (panel.id !== `details-${index}`) {
                            panel.style.maxHeight = '0px';
                            panel.previousElementSibling.classList.remove('font-extrabold');
                        }
                    });

                    if (detailsPanel.style.maxHeight === '0px' || !detailsPanel.style.maxHeight) {
                        detailsPanel.style.maxHeight = detailsPanel.scrollHeight + 'px';
                         header.classList.add('font-extrabold');
                    } else {
                        detailsPanel.style.maxHeight = '0px';
                        header.classList.remove('font-extrabold');
                    }
                }
            });

            const skillButtonsContainer = document.getElementById('skill-buttons');
            const skillDetailsContainer = document.getElementById('skill-details');

            Object.keys(skillsData).forEach((skillCategory, index) => {
                const button = document.createElement('button');
                button.className = 'skill-btn px-4 py-2 text-sm font-medium rounded-full bg-stone-100 text-stone-700 hover:bg-stone-200 transition-colors';
                button.textContent = skillCategory;
                button.dataset.category = skillCategory;
                skillButtonsContainer.appendChild(button);

                if (index === 0) {
                   displaySkillDetails(skillCategory);
                   button.classList.add('active');
                }
            });

            skillButtonsContainer.addEventListener('click', function(e) {
                if (e.target.tagName === 'BUTTON') {
                    const category = e.target.dataset.category;
                    displaySkillDetails(category);

                    skillButtonsContainer.querySelectorAll('button').forEach(btn => btn.classList.remove('active'));
                    e.target.classList.add('active');
                }
            });

            function displaySkillDetails(category) {
                const skills = skillsData[category];
                skillDetailsContainer.innerHTML = `
                    <h4 class="font-bold text-lg mb-2 text-indigo-700">${category}</h4>
                    <ul class="grid grid-cols-2 gap-x-4 gap-y-1 text-stone-700">
                        ${skills.map(s => `<li>${s}</li>`).join('')}
                    </ul>
                `;
            }

            const ctx = document.getElementById('skillsRadarChart').getContext('2d');
            const skillsRadarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: Object.keys(skillsData),
                    datasets: [{
                        label: 'Competency Level',
                        data: [5, 4, 4, 5],
                        backgroundColor: 'rgba(79, 70, 229, 0.2)',
                        borderColor: 'rgba(79, 70, 229, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(79, 70, 229, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(79, 70, 229, 1)'
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e5e7eb' },
                            grid: { color: '#e5e7eb' },
                            pointLabels: {
                                font: {
                                    size: 14,
                                    weight: '500'
                                },
                                color: '#374151'
                            },
                            ticks: {
                                backdropColor: 'rgba(250, 250, 250, 0)',
                                color: '#6b7280',
                                stepSize: 1,
                                display: false
                            },
                            suggestedMin: 0,
                            suggestedMax: 5
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });

            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section[id]');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>
</body>
